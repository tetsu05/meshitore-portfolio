<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h2>ユーザー情報を更新</h2>
      
      <% if @contact.errors.any? %>
        <%= @contact.errors.count %>件のエラーが発生しました。<br>
        <% @contact.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      
      <%= form_with model:@user, local:true do |f| %>
        <label style="display:block;">名前</label>
        <%= f.text_field :name %>
        <label style="display:block;">プロフィール画像</label>
        <%= f.attachment_field:profile_image, placeholder: "プロフィール画像" %>
        <label style="display:block;">自己紹介</label>
        <%= f.text_area :introduction, size: '10x10', class: 'form-control' %>
        <%= f.submit "更新する", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>