<table class='table'>
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>名前</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg") %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= link_to "フォロー数: #{user.active_relationships.count}", user_follower_path(user.id) %></td>
        <td><%= link_to "フォロワー数: #{user.passive_relationships.count}", user_followed_path(user.id) %></td>
        <td>
        <% if current_user != user %>

          <% if current_user.following?(user) %>
            <%= link_to 'フォロー外す', user_relationship_path(user.id, current_user.id), method: :DELETE %>
          <% else %>
            <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
          <% end %>

        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>