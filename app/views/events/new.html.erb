<div class="container">
    <div class="row">
      <div class="col-10">
<h2>毎日の摂取カロリーを記録しておこう！！</h2>

<%= form_with(model: @event, local: true) do |form| %>

  <div class="title">
    <%= form.label :料理名など %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :日付の設定「日付のみ合わせてください」 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :総摂取カロリーを書いてください！ %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
</div>
</div>
</div>