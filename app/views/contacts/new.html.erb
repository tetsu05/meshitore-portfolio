<h2>お問合せフォーム</h2>
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email, '返信用メールアドレス*' %>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :phone_number, '電話番号*' %>
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :subject, 'お問い合わせ件名*' %>
    <%= f.select :subject, Contact.subjects.keys, include_blank: '選択してください', class: 'form-control' , required: true  %>
    <%#= f.select :subject, {'サービスに関するご質問': 0, 'その他ご質問': 1}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x10', class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '入力内容確認' %>
  </div>
<% end %>