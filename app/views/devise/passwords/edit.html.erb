<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h2>パスワードを変更する</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field mt-3">
          <%= f.label :password, "新しいパスワード" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: 'form-control' %>
        </div>
      
        <div class="field mt-3">
          <%= f.label :password_confirmation, "新しいパスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
        </div>
      
        <div class="actions mt-5">
          <%= f.submit "変更" %>
        </div>
      <% end %>
    </div>
  </div>
</div>