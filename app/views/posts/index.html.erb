<div class="container">
  <div class="row">
    <div class="mx-arto col-12 ">
      <div class="mt-3">
        <%= render 'search_form' %>
      </div>
      <div class="mt-3 text-center ">
        <h2 class="fas fa-crown">いいねランキング</h2>
      </div>
      <div class="m-5 w-80 d-flex flex-wrap justify-content-around">
        <% @all_ranks.each.with_index(1) do |post,i| %>
          <div class="post-wrap">
            <h4 class="text-center">
              第<%= i %>位
            </h4>
            <%= link_to post_path(post.id) do %>
            
              <!-- 料理画像 -->
              <div class="mt-4">
                <%= attachment_image_tag(post, :cooking_image, fallback: "no-image.jpg", size:'300x300') %>
              </div>
            <% end %>
            
            <!-- 料理タイトル -->
            <p class="h3 text-center mt-3">
              <%= post.title %>
            </p>
            
            <div>
              <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
            </div>
            
            <div>
                <%= attachment_image_tag(post.user, :profile_image, fallback: "no-image.jpg", size:'50x50') %>
                <%= post.user.name %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mb-5 text-center">
        <h2 class="fas fa-utensils">みんなの投稿</h2>
      </div>
      
        <div class="w-80 m-5 d-flex flex-wrap justify-content-around ">
          <% @posts.each do |post| %>
            <div class="post-wrap">
              <%= link_to post_path(post.id) do %>
              
                <div class="mt-4">
                  <!-- 料理画像 -->
                  <%= attachment_image_tag(post, :cooking_image, fallback: "no-image.jpg", size:'200x200') %>
                </div>
              <% end %>
              
              <p class="h4 text-center m-3">
                <!-- 料理タイトル -->
                <%= post.title %>
              </p>
              
              <div>
                <!-- 投稿日時 -->
                <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
              </div>
              
              <div>
                <%= attachment_image_tag(post.user, :profile_image, fallback: "no-image.jpg", size:'50x50') %>
                <%= post.user.name %>
              </div>
            </div>
          <% end %>
        </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
