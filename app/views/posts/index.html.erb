<div class="container">
  <div class="row">
    <div class="mx-arto col10">
      <div class="mt-3">
        <%= render 'search_form' %>
      </div>
      <div class="mt-3">
        <h2>いいねランキング</h2>
      </div>
      <div class="m-5">
      <% @all_ranks.each.with_index(1) do |post,i| %>
          第<%= i %>位
        <%= link_to post_path(post.id) do %>
      <!-- 料理タイトル -->
          <%= post.title %>
      <!-- 料理画像 -->
          <%= attachment_image_tag(post, :cooking_image, fallback: "no-image.jpg", size:'200x200') %>
        <% end %>
      <% end %>
      </div>
      <h2>みんなの投稿</h2>
      <div class="row">
        <div class="col-md-10 ml-5">
          <% @posts.each do |post| %>
            <%= link_to post_path(post.id) do %>
          <!-- 料理タイトル -->
            <%= post.title %>
          <!-- 料理画像 -->
              <%= attachment_image_tag(post, :cooking_image, fallback: "no-image.jpg", size:'150x150') %>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
