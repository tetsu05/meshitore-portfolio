<h1>新規投稿</h1>
<%= form_with(model: @post, local: true) do |f| %>
  <!-- タイトル -->
  <div>
    <label style="display:block;">タイトル</label>
    <%= f.text_field :title %>
  </div>

  <!-- 評価 -->
  <div class="form-group row" id="star">
    <%= f.label :rate,'評価', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate, id: :review_star %>
  </div>

  <!-- 評価javascript -->
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'post[rate]',
    half: true,
  });
  </script>

  <!-- 料理画像 -->
  <div>
    <label style="display:block;">料理画像</label>
    <%= f.attachment_field:cooking_image, placeholder: "プロフィール画像" %>
  </div>

  <!-- レシピ紹介 -->
  <div>
    <label style="display:block;">レシピ紹介</label>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "投稿する", class: "btn btn-secondary" %>
  </div>
<% end %>